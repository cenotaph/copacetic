<%= error_messages_for 'serial' %>

<% form_for (@serial) do |f| %>
<p><label for="serial_title">Title</label><br/>
<%= f.text_field :name %></p>

<p><label for="serial_description">Description</label><br/>
<%= f.text_area :description , :class => 'mceEditor'  %></p>

<%= f.submit "Save"%>
 <% end %>
