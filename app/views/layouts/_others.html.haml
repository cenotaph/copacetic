- if item.nil?
  - item = @item
#othersbrowser
  You may also enjoy these related titles:
  - if @offset.nil?
  - @offset = 0
  - @til = 6
  - else
  - @offset = @offset.to_i
  - @til = @til.to_i
  - end
  - if (@offset + 6) < @item.others.size
  - forward = @offset + 6
  - else
  - forward = 0
  - end
  - if (@offset - 6) < 0
  - back = @item.others.size - 6
  - else
  - back = @offset - 6
  - end
  - if @item.others.size > 7
    #left_arrow.otherspane
      = link_to_remote image_tag('/images/left.gif', :border => 0), :update => 'othersbrowser', :url => {:action => 'others', :offset => back, :id => @item }
  - @item.others[@offset..@til].each do |other|
    .otherspane{:id => other.id}
      = link_to  image_tag(other.icon, :border => 0, :width => 50), other
      %span.others_title= link_to other.title_with_issue, other
  - if @item.others.size > 7
    #right_arrow.otherspane
      = link_to_remote image_tag('/images/right.gif', :border => 0), :update => 'othersbrowser', :url => {:action => 'others', :offset => forward, :id => @item }
