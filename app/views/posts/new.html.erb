<h1>New post</h1>

<%= error_messages_for :post %>

<% form_for(@post) do |f| %>
 <%= f.hidden_field :user_id, :value => current_user.id %>


  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body, :class => 'mceEditor' %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>
