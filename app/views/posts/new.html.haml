%h1 New post
= error_messages_for :post
- form_for(@post) do |f|
  = f.hidden_field :user_id, :value => current_user.id
  %p
    %b Title
    %br/
    = f.text_field :title
  %p
    %b Body
    %br/
    = f.text_area :body, :class => 'mceEditor'
  %p
    = f.submit "Create"
= link_to 'Back', posts_path
